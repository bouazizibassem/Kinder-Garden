        <h4>Liste Evenement</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EventName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EventName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DescriptionE)
            </dt>

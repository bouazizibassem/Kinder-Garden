@model PortfolioViewModel

@{
    ViewData["Title"] = "Create";
}

<div  style="margin:10%; padding:5%;">
    <h1>Create</h1>

    <h4>Garden</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Name Garden</label>
                    <input asp-for="NomJardin" class="form-control" />
                    <span asp-validation-for="NomJardin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmailGaredn" class="control-label"></label>
                    <input asp-for="EmailGaredn" class="form-control" />
                    <span asp-validation-for="EmailGaredn" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NumTel" class="control-label"></label>
                    <input asp-for="NumTel" class="form-control" />
                    <span asp-validation-for="NumTel" class=" text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Address</label>
                    <input asp-for="AddressJ" class="form-control" />
                    <span asp-validation-for="AddressJ" class=" text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label"></label>
                    <input type="file" asp-for="File" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ImageGalerie" class="btn btn-outline-dark">gARDINiMAGE</a>
        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
    </div>
</div>